#!/usr/bin/ruby -I lib -I ext -I conf

require 'resume'
require 'serializer'
require 'formatter'
require 'conf'

include Resume

if !ARGV[2]
    puts "usage: $0 format yaml_location base_name [core resume name]"
    exit
end
serializer = Serializer.new
serializer.core_to_use = ARGV[3] if ARGV[3]
formatter = Formatter.new(serializer.load(ARGV[1]),ARGV[2])
formatter.send(ARGV[0].to_sym)
